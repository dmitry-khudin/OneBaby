<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VariousTitles_Page">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scotty.springindicator.SpringIndicator
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:siTextSize="18sp"
                app:siIndicatorColors="@array/indicator_colors"
                app:siTextColor="@color/colorPrimaryDark"
                app:siSelectedTextColor="@android:color/holo_red_dark"
                app:siIndicatorColor="@color/cardview_dark_background"
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.scotty.springindicator.ScrollerViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>