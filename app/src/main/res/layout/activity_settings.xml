<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scotty.onebaby.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#0c94c1"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon_profile"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF242312"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emily Scott"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="OnEditAccount"
            android:background="@drawable/layout_click_back">

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_profile_blue" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Edit Account"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#13245a"
                android:textSize="20dp"
                android:layout_weight="14" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layout_click_back"
            android:onClick="OnPurchaseHistory"
            android:clickable="true">

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_purchase" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Purchase History"
                android:id="@+id/textView6"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#13245a"
                android:textSize="20dp"
                android:layout_weight="14" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layout_click_back"
            android:clickable="true"
            android:onClick="OnNotification">

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView5"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_notification" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Notification"
                android:id="@+id/textView7"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#13245a"
                android:textSize="20dp"
                android:layout_weight="14" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@drawable/layout_click_back"
            android:onClick="LogOut">

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_exit" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Log Out"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#13245a"
                android:textSize="20dp"
                android:layout_weight="14" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="20px"
            android:layout_weight="8" />

    </LinearLayout>

</LinearLayout>
